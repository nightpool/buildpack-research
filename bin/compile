#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# Fail immediately on non-zero exit code.
set -e
# Fail immediately on non-zero exit code within a pipeline.
set -o pipefail
# Fail on undeclared variables.
set -u
# Debug, echo every command
#set -x

function error() {
  echo " !     $*" >&2
  exit 1
}

function topic() {
  echo "-----> $*"
}

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

# parse and derive params
BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

topic "ENV_DIR"
ls -hal $ENV_DIR | indent

topic "Environment variables from folder"
if [ -d "$ENV_DIR" ]; then
  for e in $(ls $ENV_DIR); do
    echo "       $e=$(cat $ENV_DIR/$e)"
  done
fi

topic "Environment variables from env"
env | indent

topic "Release-phase setup"
mkdir -p $BUILD_DIR/bin
cp bin/echo_env $BUILD_DIR/bin/echo_env

topic ".profile.d/ setup"
mkdir -p $BUILD_DIR/.profile.d
cp .profile.d/* $BUILD_DIR/.profile.d/
